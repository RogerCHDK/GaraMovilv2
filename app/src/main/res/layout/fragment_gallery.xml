<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.garantias.GarantiaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <EditText
                android:id="@+id/txtP_productoF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/producto"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtP_tiempoF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/tiempo"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtP_tiendaF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/tienda"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/txtP_condicionesF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/condiciones"
                android:inputType="textPersonName" />

            <ImageView
                android:id="@+id/img_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textAlignment="center"
                android:text="@string/s_lista" />

            <ListView
                android:id="@+id/lv_datosGarantiaF"
                android:layout_width="match_parent"
                android:layout_height="219dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>